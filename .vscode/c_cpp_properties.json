{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",            // Adds the workspace folder recursively
                "/usr/include/gtk-3.0",            // GTK headers
                "/usr/include/glib-2.0",           // GLib headers
                "/usr/include/webkitgtk-4.1",      // WebKitGTK headers
                "/usr/include",                    // General includes
                "/usr/lib/x86_64-linux-gnu/glib-2.0/include" // Additional GLib include path for 64-bit systems
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++",            // Path to your compiler
            "intelliSenseMode": "gcc-x64",             // For IntelliSense on GCC
            "browse": {
                "path": [
                    "/usr/include",
                    "/usr/include/gtk-3.0",
                    "/usr/include/webkitgtk-4.1",
                    "/usr/include/glib-2.0",
                    "/usr/lib/x86_64-linux-gnu/glib-2.0/include"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        }
    ],
    "version": 4
}

